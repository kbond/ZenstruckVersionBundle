<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>        
        <parameter key="zenstruck.version.controller.class">Zenstruck\VersionBundle\Controller\VersionController</parameter>
    </parameters>

    <services>
        <service id="data_collector.version" class="Zenstruck\VersionBundle\DataCollector\VersionDataCollector">
            <argument /> <!-- file -->
            <tag name="data_collector" template="ZenstruckVersionBundle:Version:toolbar" id="version" />
        </service>

        <service id="zenstruck.version.controller" class="%zenstruck.version.controller.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="data_collector.version" />
        </service>
    </services>
</container>